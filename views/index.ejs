<% include ./partials/header.ejs %>

<div
  class="w-full bg-center bg-cover min-h-screen bg-zinc-300 flex items-center justify-center px-4 bg-[url('https://images.unsplash.com/photo-1472289065668-ce650ac443d2?q=80&w=2069&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')]">

  <!-- responsive login box -->
  <div class="w-full sm:w-[90%] md:w-[60%] lg:w-[40%] xl:w-[30%] bg-zinc-100 px-6 sm:px-8 md:px-12 py-6 rounded-md shadow-lg">

    <h1 class="text-xl sm:text-2xl text-center font-semibold text-zinc-700 tracking-tight capitalize">
      Welcome To Pinterest
    </h1>

    <form action="/login" method="post" class="mt-4 space-y-3">
      <input class="border-2 rounded-xl block w-full px-3 py-2" placeholder="Username" type="text" name="username">
      <input class="border-2 rounded-xl block w-full px-3 py-2" placeholder="Password" type="password" name="password">

      <a href="#" class="block text-right text-xs font-semibold text-red-600 hover:underline">Forget Password?</a>

      <input
        class="block w-full px-3 py-2 mt-2 bg-red-600 text-white font-medium rounded-full cursor-pointer hover:bg-red-700 transition"
        value="Login" type="submit">
    </form>

    <p class="text-[11px] sm:text-xs text-zinc-600 mt-4 text-center leading-snug">
      By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our Privacy Policy.
    </p>

    <a class="block text-center w-full mt-6 text-sm font-semibold text-zinc-700 hover:underline"
       href="/register">
       Don't have an account?
    </a>
  </div>
</div>

