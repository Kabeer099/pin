<% include ./partials/header.ejs %>

<!-- Optional inline CSS for masonry -->
<style>
  .masonry {
    column-count: 4;
    column-gap: 1rem;
  }
  .masonry-item {
    break-inside: avoid;
    margin-bottom: 1rem;
  }
  .card {
    border-radius: 0.75rem;
    overflow: hidden;
    background: #1f2937; /* tailwind's gray-800 look */
    box-shadow: 0 2px 8px rgba(0,0,0,0.15);
  }
  .card img {
    width: 100%;
    height: auto;
    display: block;
  }

  @media (max-width: 1200px) {
    .masonry { column-count: 3; }
  }
  @media (max-width: 900px) {
    .masonry { column-count: 2; }
  }
  @media (max-width: 600px) {
    .masonry { column-count: 1; }
  }

  /* Optional: title ellipsis if long */
  .card-title {
    color: #fff;
    margin: 0;
    padding: 0.5rem 0.75rem;
    font-size: 0.875rem;
    line-height: 1.2;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
</style>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
  <div class="masonry">
    <% posts.forEach(function(elem){ %>
      <div class="masonry-item">
        <div class="card">
          <a href="/show/posts/<%= elem._id %>">
            <img src="/images/uploads/<%= elem.image %>" alt="<%= elem.title %>">
          </a>
          <div class="p-2">
            <h3 class="card-title"><%= elem.title %></h3>
          </div>
        </div>
      </div>
    <%}) %>
  </div>
</div>

