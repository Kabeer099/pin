<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-lg">Create New Post</h1>
    <hr class="opacity-10">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 px-3 py-2" type="file" name="postimage" id>
        <input class="block text-black  w-1/3 px-3 py-2 mt-3 border-2 rounded-md" placeholder="Title" type="text" name="title" id>
        <textarea class="block text-black w-1/3 h-60 px-3 py-2 mt-3 border-2 rounded-md " placeholder="Description" type="text" name="description" id></textarea>
        <input class="block w-1/3 px-3 py-2 mt-3 border-2 rounded-md bg-red-800"  type="submit" value="Create New"  id>
    </form>
</div>
