<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-4 sm:px-6 md:px-10 py-8 text-white flex justify-center">
  <div class="w-full max-w-lg p-6 rounded-lg shadow-md">
    <h1 class="text-xl sm:text-2xl font-semibold mb-4">Create New Post</h1>
    <hr class="opacity-20 mb-6">

    <form action="/createpost" method="post" enctype="multipart/form-data" class="space-y-4">
      <!-- File Upload -->
      <input 
        class="block w-full px-3 py-2 text-sm border-2 rounded-md bg-zinc-100 text-black focus:outline-none focus:ring-2 focus:ring-red-600" 
        type="file" name="postimage" id>

      <!-- Title -->
      <input 
        class="block w-full px-3 py-2 text-sm border-2 rounded-md bg-zinc-100 text-black focus:outline-none focus:ring-2 focus:ring-red-600" 
        placeholder="Title" type="text" name="title" id>

      <!-- Description -->
      <textarea 
        class="block w-full h-40 px-3 py-2 text-sm border-2 rounded-md bg-zinc-100 text-black focus:outline-none focus:ring-2 focus:ring-red-600 resize-none" 
        placeholder="Description" name="description" id></textarea>

      <!-- Submit -->
      <input 
        class="block w-full px-3 py-2 mt-2 border-2 rounded-md bg-red-700 hover:bg-red-800 text-white font-semibold cursor-pointer transition"  
        type="submit" value="Create New" id>
    </form>
  </div>
</div>

<% include ./partials/footer.ejs %>
