<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@3.6.0/fonts/remixicon.css" rel="stylesheet">
  <script src="/javascripts/tailwind.3.3.5.js"></script>
</head>
<body>
<% if(nav === true){ %>

  <!-- Top Navbar (Desktop Only) -->
  <nav class="hidden md:flex w-full px-10 py-3 justify-between bg-zinc-800 text-white items-center">
    <!-- Logo -->
    <h3 class="text-lg font-semibold">Pinterest</h3>

    <!-- Desktop Links -->
    <div class="flex gap-6 items-center">
      <a href="/profile" class="hover:text-red-400">Profile</a>
      <a href="/show/posts" class="hover:text-red-400">My Posts</a>
      <a href="/feed" class="hover:text-red-400">Feed</a>
      <a href="/logout" class="px-3 py-2 rounded-lg bg-red-700 hover:bg-red-800">Logout</a>
    </div>
  </nav>

  <!-- Bottom Navigation (Mobile Only) -->
  <nav class="fixed bottom-0 left-0 w-full bg-zinc-800 text-white flex justify-around items-center py-3 md:hidden shadow-lg z-50">
    <a href="/feed" class="flex flex-col items-center text-sm">
      <i class="ri-home-4-line text-xl"></i>
      <span>Feed</span>
    </a>
    <a href="/show/posts" class="flex flex-col items-center text-sm">
      <i class="ri-image-line text-xl"></i>
      <span>Posts</span>
    </a>
    <a href="/profile" class="flex flex-col items-center text-sm">
      <i class="ri-user-line text-xl"></i>
      <span>Profile</span>
    </a>
    <a href="/logout" class="flex flex-col items-center text-sm">
      <i class="ri-logout-box-r-line text-xl"></i>
      <span>Logout</span>
    </a>
  </nav>

<% } %>
