<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@3.6.0/fonts/remixicon.css" rel="stylesheet">
  <script src="/javascripts/tailwind.3.3.5.js"></script>
</head>
<body>
<% if(nav === true){ %>

  <!-- Navbar -->
  <nav class="w-full px-6 sm:px-10 py-3 flex justify-between bg-zinc-800 text-white items-center">
    <!-- Logo -->
    <h3 class="text-lg font-semibold">Pinterest</h3>

    <!-- Desktop Links -->
    <div class="hidden md:flex gap-6 items-center">
      <a href="/profile" class="hover:text-red-400">Profile</a>
      <a href="/show/posts" class="hover:text-red-400">My Posts</a>
      <a href="/feed" class="hover:text-red-400">Feed</a>
      <a href="/logout" class="px-3 py-2 rounded-lg bg-red-700 hover:bg-red-800">Logout</a>
    </div>

    <!-- Mobile Menu Button -->
    <button id="menu-btn" class="block md:hidden text-2xl">
      <i class="ri-menu-line"></i>
    </button>
  </nav>

  <!-- Mobile Menu (hidden by default) -->
  <div id="mobile-menu" class="hidden flex-col bg-zinc-700 text-white px-6 py-4 space-y-3 md:hidden">
    <a href="/profile" class="block hover:text-red-400">Profile</a>
    <a href="/show/posts" class="block hover:text-red-400">My Posts</a>
    <a href="/feed" class="block hover:text-red-400">Feed</a>
    <a href="/logout" class="block px-3 py-2 rounded-lg bg-red-700 hover:bg-red-800 text-center">Logout</a>
  </div>

  <script>
    // Toggle mobile menu
    const menuBtn = document.getElementById("menu-btn");
    const mobileMenu = document.getElementById("mobile-menu");
    menuBtn.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  </script>

<% } %>
