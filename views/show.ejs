<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
    <div class="cards flex flex-wrap gap-10">
        <% user.posts.forEach(function(elem){ %>
            <div class="card w-32 relative">
                
                <div class="w-full h-40 rounded-lg">
                    <a href="/show/posts/<%=elem._id%>">
                        <img src="/images/uploads/<%= elem.image %>" class="w-full h-full object-cover rounded-md border border-red-900 border-2 " alt="">
                    </a>
                </div>

                <h3 class="mt-2 texst-sm"><%= elem.title %></h3>

                <!-- Delete Button -->
                <form action="/delete-post/<%= elem._id %>" method="post" class="absolute top-0 right-0 m-2">
                    <button type="submit" class="text-red-500 hover:text-red-700 focus:outline-none">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-5 w-5">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </form>
            </div>
        <%}) %>
    </div>
</div>

<% include ./partials/footer.ejs %>
